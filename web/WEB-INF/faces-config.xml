<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <navigation-rule>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>new</from-outcome>
            <to-view-id>/mesReferencia/edit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>edit</from-outcome>
            <to-view-id>/mesReferencia/edit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>view</from-outcome>
            <to-view-id>/mesReferencia/view.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/mesReferencia/edit.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{mesReferenciaManager.save(mesReferencia)}</from-action>
            <from-outcome>persisted</from-outcome>
            <to-view-id>/mesReferencia/view.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/mesReferencia/view.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{despesaManager.createNew}</from-action>
            <from-outcome>edit</from-outcome>
            <to-view-id>/despesa/edit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{recebimentoManager.createNew}</from-action>
            <from-outcome>edit</from-outcome>
            <to-view-id>/recebimento/edit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/tipoDespesa/edit.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{tipoDespesaManager.save(tipoDespesa)}</from-action>
            <from-outcome>persisted</from-outcome>
            <to-view-id>/tipoDespesa/list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cancel</from-outcome>
            <to-view-id>/despesa/edit.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/despesa/edit.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{despesaManager.save(despesa)}</from-action>
            <from-outcome>persisted</from-outcome>
            <to-view-id>/mesReferencia/view.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>newTipoDespesa</from-outcome>
            <to-view-id>/tipoDespesa/edit.xhtml</to-view-id>
            <redirect>
                <view-param>
                    <name>fromView</name>
                    <value>/despesa/edit.xhtml</value>
                </view-param>
            </redirect>            
        </navigation-case>
        <navigation-case>
            <from-outcome>cancel</from-outcome>
            <to-view-id>/mesReferencia/view.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/recebimento/edit.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{recebimentoManager.save(recebimento)}</from-action>
            <from-outcome>persisted</from-outcome>
            <to-view-id>/mesReferencia/view.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>newUsuario</from-outcome>
            <to-view-id>/usuario/edit.xhtml</to-view-id>
            <redirect>
                <view-param>
                    <name>fromView</name>
                    <value>/recebimento/edit.xhtml</value>
                </view-param>
            </redirect>            
        </navigation-case>
        <navigation-case>
            <from-outcome>cancel</from-outcome>
            <to-view-id>/mesReferencia/view.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/usuario/edit.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{usuarioManager.save(usuario)}</from-action>
            <from-outcome>persisted</from-outcome>
            <to-view-id>/usuario/list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cancel</from-outcome>
            <to-view-id>/recebimento/edit.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <converter>
        <description>Converter for Float Numbers</description>
        <converter-id>FloatConverter</converter-id>
        <converter-class>br.com.fbl.casa.converter.FloatConverter</converter-class>        
    </converter>
    
</faces-config>
